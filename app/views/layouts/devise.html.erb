<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %></title>
  <!--[if lt IE 9]>
  <%= javascript_include_tag "html5shiv" %>
  <%= javascript_include_tag "html5shiv-printshiv" %>
  <![endif]-->
  <%= stylesheet_link_tag    "fae/application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "fae/application" %>
  <%= csrf_meta_tags %>
</head>
<body class="login-body">

  <%= render 'flash_messages' %>

  <section class="login-content">
    <section class="login-area">
    <% if @option.logo.present? && @option.logo.asset.present? %>
      <%= image_tag @option.logo.asset.url, alt: @option.title %>
    <% else %>
      <%= content_tag :h1, @option.title %>
    <% end %>

      <%= yield %>

        </section>

    <footer class="login-footer">
      <span class="login-fine">a <img src="fae/fine.png" alt="FINE Logo"> admin</span>
      <ul class="login-helper-area">
        <li><%= render "devise/shared/links" %></li>
      </ul>
    </footer>
  </section>

</body>
</html>