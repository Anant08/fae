<%= simple_form_for(@option) do |f| %>
  <section class="main_content-header">
    <div class="main_content-header-wrapper">

      <%= form_header @option %>

      <div class="main_content-header-save">
        <%= link_to "Cancel", fae.root_path(cancelled: true), id: "main_content-header-save-cancel" %>
        <%= f.submit "Save Settings" %>
      </div>
    </div>
  </section>

  <%= render 'flash_messages' %>

  <div class="main_content-section">
    <section class="main_content-section">
      <div class="main_content-section-area">
        <%= f.input :title, label: "Project Name" %>
        <%= f.input :time_zone %>
        <%= f.input :live_url, label: 'Live URL <h6>Include http:// for external links.</h6>'.html_safe %>
        <%= f.input :stage_url, label: 'Stage URL <h6>Include http:// for external links.</h6>'.html_safe %>

        <%= fae_image_form f, @option, image_name: :logo, required: true %>
        <%= fae_image_form f, @option, image_name: :favicon %>
      </div>
    </section>
  </div>
<% end %>
