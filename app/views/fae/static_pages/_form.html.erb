<%= simple_form_for @item, url: update_static_page_path(id: @item.id), method: :put, html: {multipart: true, novalidate: true} do |f| %>
  <section class="main_content-header">
    <div class="main_content-header-wrapper">

      <nav class="main_content-breadcrumbs">
        <ul class="breadcrumbs">
          <% if current_user.super_admin? %>
            <li><%= link_to "All #{@klass_name.titleize}", @index_path %></li>
          <% end %>
        </ul>
      </nav>

      <%= form_header @klass_name.titleize %>

      <div class="main_content-header-save">
        <%= link_to "Cancel", @cancelled_path, id: "main_content-header-save-cancel" %>
        <%= f.submit "Save Settings" %>
      </div>
    </div>
  </section>

<div class="main_content-section">
  <section class="main_content-section">
    <div class="main_content-section-area">
      <%= f.input :title %>
    </div>
  </section>
</div>
<% end %>