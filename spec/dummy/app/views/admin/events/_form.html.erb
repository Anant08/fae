<%= simple_form_for(['admin', @item]) do |f| %>
  <section class="main_content-header">
    <div class="main_content-header-wrapper">
      <%= render 'fae/shared/form_header', item: @item %>
      <%# render 'fae/shared/form_nav', sections: [title, anchor] %>
      <%= render 'fae/shared/form_buttons', f: f %>
    </div>
  </section>

  <div class="main_content-sections">
    <section class="main_content-section">
      <div class="main_content-section-area">
        <%= f.input :name %>

        <%= f.input :start_date, as: :string, wrapper_html: { class: 'datepicker' } %>
        <%= f.input :end_date, as: :date %>

        <!-- NO SEARCH -->
        <%= f.input :event_type, collection: ['Birthday', 'Bar Mitzvah'], wrapper_html: { class: 'select-no_search' } %>


        <!-- Horizontal Checkboxes -->
        <%= f.association :people, as: :check_boxes, wrapper_html: { class: 'checkbox_collection--horizontal' } %>

        
        <!-- Optgroup examples / Indented Pulldowns -->
        <% states = {'Califonia' => ['Los Angeles', 'San Francisco'], 'Oregon' => ['Portland', 'Boring', 'France']} %>
        <%= f.input :city, collection: states, as: :grouped_select, group_method: :last, wrapper_html: { class: "select" } %>

      </div>
    </section>
  </div>
<% end %>