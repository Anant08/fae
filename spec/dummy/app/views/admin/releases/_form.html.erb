<%= simple_form_for(['admin', @item]) do |f| %>
  <section class="main_content-header">
    <div class="main_content-header-wrapper">
      <%= render 'fae/shared/form_header', header: @klass_name  %>
      <%# render 'fae/shared/form_nav', sections: [title, anchor] %>
      <nav class="main_content-header-section">
        <ul class="main_content-header-section-links">
          <li><a href="#general_info">General Info</a></li>
          <li><a href="#associations_section">Associations</a></li>
          <li><a href="#aromas_section">Aromas</a></li>
        </ul>
      </nav>
      <%= render 'fae/shared/form_buttons', f: f, item: @item %>
    </div>
  </section>

  <div class="main_content-sections">
    <section class="main_content-section" id="general_info">
      <div class="main_content-section-area">

        <%= fae_input f, :name,
          input_class: 'slugger',
          helper_text: 'text input',
          hint: '<h3>Normal Hint</h3><p>Yes, HTML is allowed</p>'.html_safe
        %>

        <%= fae_input f, :vintage,
          input_class: 'slugger',
          helper_text: 'text input',
          dark_hint: '<h3>Dark Hint</h3><p>Yes, HTML is allowed</p>'.html_safe
        %>

        <%= fae_input f, :slug, helper_text: 'text input (populated from name and vintage)' %>

        <%= fae_input f, :intro, helper_text: 'texterea' %>

        <!-- Text Areas -->
        <%= fae_input f, :body,
            label: 'Body Content',
            wrapper_class: 'release_body-text_area--wrapper',
            input_class: 'release_body-text_area',
            helper_text: 'textarea',
            hint: markdown_helper %>

        <!-- Prefix -->
        <%= fae_prefix f, :price, helper_text: 'prefix', prefix: '$', placeholder: '50.00' %>

        <%= fae_suffix f, :weight, helper_text: 'suffix', suffix: 'lbs' %>

        <!-- Input for video urls -->
        <%= fae_video_url f, :video_url, helper_text: "video url (default helper: Please enter your YouTube video ID. The video ID is between v= and & of the video's url. This is typically 11 characters long.)" %>

        <!-- Checkboxes are the defult when displaying booleans -->
        <%= fae_input f, :featured, helper_text: 'checkbox' %>

        <!-- Radio Buttons Vertical Stack -->
        <%= fae_radio f, :on_stage, helper_text: 'radio verital'  %>

        <!-- Radio Buttons Horizontal Stack -->
        <%= fae_radio f, :on_prod, type: 'inline', input_class: 'something', helper_text: 'radio Horizontal' %>

      </div>
    </section>

    <section class="main_content-section" id="associations_section">
      <%= content_tag :h2, 'Associations', class: 'main_content-section-title' %>
      <div class="main_content-section-area">

        <!-- Large Pulldown -->
        <%= fae_pulldown f, :varietal, helper_text: 'pulldown' %>

        <!-- Small Pulldown -->
        <%= fae_pulldown f, :wine, size: 'short', helper_text: 'pulldown short'  %>

        <!-- fae_multiselect {two_pane: false} -->
        <%= fae_multiselect f, :acclaims, label_method: :publication, helper_text: 'mutliselect' %>

        <!-- Multiselect using two panels -->
        <%= fae_multiselect f, :selling_points, two_pane: true, helper_text: 'two-pane mutliselect' %>

        <!-- Checkboxes Vertical Stack -->
        <%= fae_checkbox f, :events, helper_text: 'checkboxes verital' %>

      </div>
    </section>
  </div>
<% end %>

<% if params[:action] == 'edit' %>
  <section class="main_content-section" id="aromas_section">
    <%= render 'fae/shared/nested_table_advanced',
      assoc: :aromas,
      parent_item: @item,
      cols: [:name, :live],
      ordered: true,
      header: 'Aromas (nested table)' %>
  </section>
<% end %>
